<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_view"
            android:padding="14dp"
            android:text="Tea Leaf Disease Recognition"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!-- Image Preview -->
        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="20dp"
            android:background="#E0E0E0"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <!-- Primary Buttons -->
        <Button
            android:id="@+id/btnCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="📸 Take Photo"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#1B548D"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnGallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="🗂️ Choose Image"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#1B548D"
            android:textColor="@android:color/white" />

        <!-- Analyze + Reset -->
        <LinearLayout
            android:id="@+id/llAnalyzeReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnAnalyze"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🔎 Analyze Disease"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:visibility="gone" />

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🗑️🚮 Remove Image"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#F44336"
                android:textColor="@android:color/white"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Extra pages: About / Leaf Info / Statistics / How to Use -->
        <LinearLayout
            android:id="@+id/llExtraButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📊 Statistics"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:backgroundTint="#0277BD"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnLeafInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🌱 Leaf Disease Information"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#FF9800"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnHowToUse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="💡 How to Use"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#009688"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📩 About Us"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#6A1B9A"
                android:textColor="@android:color/white" />


        </LinearLayout>

        <!-- Exit Button -->
        <Button
            android:id="@+id/btnExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="↩ Exit"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:backgroundTint="#D32F2F"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
